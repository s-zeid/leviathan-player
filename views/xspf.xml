<playlist version="1" xmlns="http://xspf.org/ns/0/">
 <trackList>
%for i in entries:
  <track>
   <location>{{i['song']['url']}}</location>
   <title>{{i['song']['title']}}</title>
   <creator>{{i['song']['artist']}}</creator>
   <annotation>{{i['song']['album']}}</annotation>
   <image>{{i['song']['art_url']}}</image>
  </track>
%end
 </trackList>
</playlist>
